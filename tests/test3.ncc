/* Routine to convert decimal to binary */
routine dec_to_bin(dec: integer): integer is
  var bin: integer is 0

  while dec /= 0 loop
    bin := (10 * bin) + (dec % 2)
    dec := dec / 2
  end
  return bin
end

routine main() is
  assert dec_to_bin(31), 11111 // OK
  assert dec_to_bin(15), 1111 // OK
  assert dec_to_bin(32), 100000 // OK
end