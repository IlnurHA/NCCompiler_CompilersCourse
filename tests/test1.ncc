type int is integer

routine fac_rec(cur: int, next: int): int is
  /* Recursively compute the factorial */
    if next < 1 then
            return cur
    else
        return fac_rec(cur * next, next - 1)
    end
end

routine fac (n: int): int is
  /* Driver of the factorial function */
  if n < 0 then
    return 0
  else 
    if n = 0 then
      return 1
    else
      return fac_rec(n, n - 1)
    end
  end  
end

routine main() is
  assert fac(5), 120 // OK
  assert fac(4), 24 // OK
  assert fac(3), 6 // OK 
  assert fac(1), 1 // OK
end

