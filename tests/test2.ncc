routine main() is
  var n: integer
  n := 10
  var arr: array[n] integer

  for i in 1..n loop
    arr[i] := i
  end
  
  var l: integer is 1
  var r: integer is n
  var mid: integer

  var x: integer is 3

  /* Binary search of x in arr */
  while l <= r loop
 
          mid := l + (r - l) / 2
 
          if arr[mid] = x then
              return mid
          else 
      if arr[mid] < x then
                  l := mid + 1
      else
                  r := mid - 1
      end
     end
  end
  // assert res, 3 // OK
  // mid should be 3
end